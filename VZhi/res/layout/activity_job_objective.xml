<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/general_back_color"
    android:orientation="vertical" >

    <include layout="@layout/menu_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <com.xiaobukuaipao.vzhi.widget.FormItemByLineView
                android:id="@+id/job_objective_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:centerTip="@string/general_fill_must"
                custom:itemTextLeftTitle="@string/job_objective_category" />

            <include layout="@layout/bottom_line" />

            <com.xiaobukuaipao.vzhi.widget.FormItemByLineView
                android:id="@+id/job_objective_intention_pos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:centerTip="@string/please_complete_intent_pos"
                custom:itemTextLeftTitle="@string/job_objective_intention_pos" />

            <include layout="@layout/bottom_line" />

            <com.xiaobukuaipao.vzhi.widget.FormItemByLineLayout
                android:id="@+id/job_objective_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:leftLabel="@string/job_objective_salary"
                custom:rightTip="@string/please_complete_salary2" />

            <com.xiaobukuaipao.vzhi.widget.FormItemByLineView
                android:id="@+id/job_objective_company_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:centerTip="@string/please_complete_multi_select"
                custom:itemTextLeftTitle="@string/job_objective_company_type" />

            <include layout="@layout/bottom_line" />

            <com.xiaobukuaipao.vzhi.widget.FormItemByLineView
                android:id="@+id/job_objective_intention_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:centerTip="@string/please_complete"
                custom:itemTextLeftTitle="@string/job_objective_intention_city" />

            <include layout="@layout/bottom_line" />

            <com.xiaobukuaipao.vzhi.widget.FormItemByLineView
                android:id="@+id/job_objective_jobstate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:centerTip="@string/general_fill_must"
                custom:itemTextLeftTitle="@string/job_objective_jobstate" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>