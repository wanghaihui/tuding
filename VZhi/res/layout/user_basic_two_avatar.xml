<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:gravity="center"
    android:background="@drawable/bg_corners_white" >
    
    <RelativeLayout
            android:id="@+id/dialog_real_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <com.xiaobukuaipao.vzhi.widget.VerifyUserAvatar
                android:id="@+id/dialog_real_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/app_name"
                android:gravity="center" />
            
            <TextView
                android:id="@+id/modify_real_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:layout_below="@id/dialog_real_avatar"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/modify_real_avatar_str"
                android:textColor="@color/general_color_FF9900"
                android:textSize="16sp"
                android:background="@drawable/rectangle_circle_corner_orange" />
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider" />

        <RelativeLayout
            android:id="@+id/dialog_annoy_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <com.xiaobukuaipao.vzhi.view.RoundedImageView
	            android:id="@+id/dialog_annoy_avatar"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:layout_centerHorizontal="true"
	            android:gravity="center"
	            android:contentDescription="@string/image_view"
	            android:scaleType="centerCrop"
	            app:riv_border_color="@color/bg_light_gray"
	            app:riv_border_width="1dip"
	            app:riv_corner_radius="10dip"
	            app:riv_mutate_background="true"
	            app:riv_oval="true" >
        	</com.xiaobukuaipao.vzhi.view.RoundedImageView>
            
            <TextView
                android:id="@+id/modify_annoy_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:layout_below="@id/dialog_annoy_avatar"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/modify_annoy_avatar_str"
                android:textColor="@color/general_color_FF9900"
                android:textSize="16sp"
                android:background="@drawable/rectangle_circle_corner_orange" />

            
        </RelativeLayout>
</LinearLayout>