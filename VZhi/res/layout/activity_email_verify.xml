<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/general_back_color"
    android:orientation="vertical" >

    <include layout="@layout/menu_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/register_menu_margin_top"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_hint_email_verify_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_email_verify_1"
            android:textSize="@dimen/font_large" />

        <TextView
            android:id="@+id/tv_hint_email_verify_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_email_verify_2"
            android:textColor="@color/green"
            android:textSize="@dimen/font_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_hint_email_verify_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_email_verify_3"
            android:textSize="@dimen/font_large" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/job_detail_margin_sma_top"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_email_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/font_button"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_retry_send_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/retry_send_email"
            android:textColor="@color/bg_blue"
            android:textSize="@dimen/font_button" />

        <Button
            android:id="@+id/btn_not_received_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/job_detail_margin_top"
            android:background="@android:color/transparent"
            android:text="@string/not_received_email"
            android:textColor="@color/bg_blue"
            android:textSize="@dimen/font_button" />
    </LinearLayout>

</LinearLayout>