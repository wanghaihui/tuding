<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_layout_selector"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/person_profile_10dp"
        android:paddingLeft="@dimen/person_profile_15dp"
        android:paddingRight="@dimen/person_profile_5dp"
        android:paddingTop="@dimen/person_profile_10dp" >

        <TextView
            android:id="@+id/position_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/general_color_666666"
            android:textSize="@dimen/text_size_16sp" />

        <TextView
            android:id="@+id/position_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/position_title"
            android:layout_below="@+id/position_title"
            android:layout_marginTop="@dimen/layout_margin_5dp"
            android:textColor="@color/general_color_666666"
            android:textSize="@dimen/text_size_16sp" />

        <TextView
            android:id="@+id/position_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/font_black_999" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/person_profile_15dp"
        android:layout_marginRight="@dimen/person_profile_5dp"
        android:background="@color/general_color_cccccc" />

</LinearLayout>