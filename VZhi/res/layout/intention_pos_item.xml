<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/intent_margin_30dp"
    android:paddingLeft="@dimen/intent_margin_10dp"
    android:paddingRight="@dimen/intent_margin_5dp" >

    <ImageView
        android:id="@+id/job_position_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/right_jump_desc"
        android:src="@drawable/delete_gray" />

    <com.xiaobukuaipao.vzhi.view.AutoResizeTextView
        android:id="@+id/job_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/job_position_del"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingRight="5dip"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16sp" />

</RelativeLayout>