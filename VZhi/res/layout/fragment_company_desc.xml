<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_job_experience_layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_back_color" >

    <LinearLayout
        android:id="@+id/compant_desc_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="20dp" >

        <EditText
            android:id="@+id/compant_desc_text_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_edittext_guide"
            android:gravity="top"
            android:hint="@string/corp_edit_desc_hint"
            android:minLines="5"
            android:padding="7dp"
            android:textColor="@color/font_label"
            android:textColorHint="@color/font_tips"
            android:textSize="@dimen/font_top_title" />
    </LinearLayout>

</ScrollView>