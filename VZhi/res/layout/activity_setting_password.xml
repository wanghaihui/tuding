<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.xiaobukuaipao.vzhi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_back_color"
    android:orientation="vertical" >

    <include layout="@layout/menu_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-5dp"
        android:layout_marginTop="@dimen/layout_margin_20dp"
        android:background="@drawable/bg_corners"
        android:orientation="vertical"
        android:padding="1px" >

        <com.xiaobukuaipao.vzhi.widget.FormItemByLineLayout
            android:id="@+id/setting_orin_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftLabel="@string/setting_old_pswd"
            app:rightTip="@string/input_old_password" />

        <com.xiaobukuaipao.vzhi.widget.FormItemByLineLayout
            android:id="@+id/setting_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftLabel="@string/setting_new_pswd"
            app:rightTip="@string/input_new_password" />

        <com.xiaobukuaipao.vzhi.widget.FormItemByLineLayout
            android:id="@+id/setting_new_password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftLabel="@string/setting_new_pswd2"
            app:rightTip="@string/input_renew_password" />
    </LinearLayout>

</LinearLayout>