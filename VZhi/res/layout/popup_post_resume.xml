<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.xiaobukuaipao.vzhi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/popup_post_resume_one_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_corners"
        android:hint="@string/post_resume_one_word"
        android:maxLines="3"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="5dp" >

        <CheckBox
            android:id="@+id/popup_post_resume_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@drawable/check_box_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:text="@string/post_resume_remember"
            android:textColor="@color/base_interface_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/popup_post_resume_realhead"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="left"
            android:background="@drawable/rectangle_circle_corner"
            android:orientation="vertical" >

            <com.xiaobukuaipao.vzhi.view.RoundedNetworkImageView
                android:id="@+id/popup_post_resume_realhead_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/general_user_avatar"
                app:riv_border_width="0px"
                app:riv_oval="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#66666666" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/post_resume_realname"
                android:textColor="@color/font_black_666" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/popup_post_resume_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/rectangle_circle_corner"
            android:orientation="vertical" >

            <com.xiaobukuaipao.vzhi.view.RoundedNetworkImageView
                android:id="@+id/popup_post_resume_avatar_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/general_user_avatar"
                app:riv_border_width="0px"
                app:riv_oval="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#66666666" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/post_resume_anonymous"
                android:textColor="@color/font_black_666" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="5dp" >

        <CheckBox
            android:id="@+id/popup_post_resume_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:button="@drawable/check_box_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:text="@string/post_resume_confirm"
            android:textColor="@color/base_interface_color" />
    </LinearLayout>

</LinearLayout>