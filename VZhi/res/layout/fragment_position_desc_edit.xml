<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_back_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:layout_marginTop="10dp"
        android:background="@color/general_back_color"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <EditText
            android:id="@+id/position_desc"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/job_desc_margin_weight"
            android:layout_marginRight="@dimen/job_desc_margin_weight"
            android:background="@drawable/bg_edittext_guide"
            android:gravity="top"
            android:hint="@string/position_desc_prompt"
            android:minLines="5"
            android:padding="7dp"
            android:textColor="@color/font_label"
            android:textColorHint="@color/font_tips"
            android:textSize="@dimen/font_top_title" />
    </LinearLayout>

</LinearLayout>