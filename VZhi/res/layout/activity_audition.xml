<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.xiaobukuaipao.vzhi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_back_color"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include layout="@layout/menu_bar" />

    <ScrollView
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp" >

            <com.xiaobukuaipao.vzhi.widget.FormItemByLineView
                android:id="@+id/audition_position"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:displayArrow="false"
                app:itemTextLeftTitle="@string/audition_position" />

            <include layout="@layout/bottom_line" />

            <com.xiaobukuaipao.vzhi.widget.FormItemByLineView
                android:id="@+id/audition_corp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:displayArrow="false"
                app:itemTextLeftTitle="@string/audition_corp" />

            <include layout="@layout/bottom_line" />

            <com.xiaobukuaipao.vzhi.widget.FormItemByLineView
                android:id="@+id/audition_date"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:centerTip="@string/general_tips_add"
                app:itemTextLeftTitle="@string/audition_date" />

            <include layout="@layout/bottom_line" />

            <com.xiaobukuaipao.vzhi.widget.FormItemByLineView
                android:id="@+id/audition_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:centerTip="@string/general_tips_add"
                app:itemTextLeftTitle="@string/audition_time" />

            <include layout="@layout/bottom_line" />

            <com.xiaobukuaipao.vzhi.widget.FormItemByLineLayout
                android:id="@+id/audition_location"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:centerTip="@string/general_tips_add"
                app:dispArrow="false"
                app:leftLabel="@string/audition_location" />

            <include layout="@layout/bottom_line" />

            <com.xiaobukuaipao.vzhi.widget.FormItemByLineLayout
                android:id="@+id/audition_hr"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:centerTip="@string/general_tips_add"
                app:dispArrow="false"
                app:leftLabel="@string/audition_hr" />

            <include layout="@layout/bottom_line" />

            <com.xiaobukuaipao.vzhi.widget.FormItemByLineLayout
                android:id="@+id/audition_mobile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:centerTip="@string/general_tips_add"
                app:dispArrow="false"
                app:leftLabel="@string/audition_mobile" />

            <include layout="@layout/bottom_line" />

            <com.xiaobukuaipao.vzhi.widget.FormItemByLineLayout
                android:id="@+id/audition_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:centerTip="@string/general_tips_add"
                app:dispArrow="false"
                app:leftLabel="@string/audition_email" />

            <include layout="@layout/bottom_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/audition_addition"
                android:textSize="@dimen/text_size_20sp" />

            <EditText
                android:id="@+id/audition_addition"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_edittext_guide"
                android:gravity="start"
                android:inputType="text"
                android:minLines="2"
                android:padding="5dp"
                android:textSize="@dimen/text_size_16sp" />

            <Button
                android:id="@+id/audition_send"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_corners_fill_blue"
                android:text="@string/audition_send"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>