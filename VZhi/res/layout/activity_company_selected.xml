<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/general_back_color"
    android:orientation="vertical" >

    <include layout="@layout/menu_bar" />

    <com.xiaobukuaipao.vzhi.view.AutoCompleteTextViewWithDel
        android:id="@+id/auto_job_company_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edittext_guide"
        android:completionThreshold="1"
        android:hint="请完善公司名称"
        android:padding="7dp"
        android:textColor="@color/black" />

</LinearLayout>