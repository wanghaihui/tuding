<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/base_interface_color"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/undispose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_return_bg_selector"
        android:paddingBottom="10dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:paddingTop="10dp"
        android:text="@string/popwindow_undispose"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_weight"
        android:background="@color/white" />

    <TextView
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_return_bg_selector"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:paddingTop="10dp"
        android:text="@string/popwindow_all"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_weight"
        android:background="@color/white" />

    <TextView
        android:id="@+id/contacted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_return_bg_selector"
        android:paddingBottom="10dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:paddingTop="10dp"
        android:text="@string/popwindow_contacted"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14sp" />

</LinearLayout>