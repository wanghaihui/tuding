<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:weightSum="4" >

    <TextView
        android:id="@+id/tv_real_profile_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/msg_recommended_group"
        android:gravity="center"
        android:text="@string/real_profile_card_str" />

    <TextView
        android:id="@+id/tv_position_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/msg_recommended_posts"
        android:gravity="center"
        android:text="@string/position_card_str" />
	
    <TextView
        android:id="@+id/tv_interview_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/msg_new_reminder"
        android:gravity="center"
        android:text="@string/interview_card_str" />
    
    <TextView
        android:id="@+id/tv_nick_profile_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/msg_recommended_group"
        android:gravity="center"
        android:text="@string/nick_profile_card_str" />

</LinearLayout>