<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.xiaobukuaipao.vzhi"
    android:layout_width="match_parent"
    android:layout_height="@dimen/intent_margin_30dp"
    android:background="@drawable/bg_corners_666"
    android:paddingLeft="@dimen/intent_margin_10dp"
    android:paddingRight="@dimen/intent_margin_5dp" >

    <ImageView
        android:id="@+id/job_position_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/right_jump_desc"
        android:src="@drawable/delete_gray" />

    <com.xiaobukuaipao.vzhi.view.AutoScaleTextView
        android:id="@+id/job_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/job_position_del"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:padding="5dp"
        android:textColor="@color/general_color_333333"
        android:textSize="@dimen/text_size_16sp"
        app:minTextSize="8sp" />

</RelativeLayout>